<h1>
  Editing: <%= @todo.task %>
</h1>

<hr />

<%= form_for @todo do |f| %>
  <%= f.label :task %>
  <%= f.text_field :task, required: true %>
  <br />
  <%= f.label :owner %>
  <%= f.text_field :owner, required: true %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description, required: true %>
  <br />
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <br />
  <%= f.submit %>
<% end %>

<%= link_to 'Cancel', todo_path(@todo) %>